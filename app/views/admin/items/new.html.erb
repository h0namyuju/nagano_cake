 <%= render 'unlocks/admin' %>
 
 <div class="container">
 <div class="row">
 <div class="col-10">

   <h3>商品新規登録</h3>
   
   <%= form_with model: item, url: item_path, method: :post do |f| %>

 <div class="form-group">
    <%= f.label :商品画像 %>
    <%= f.file_field :item_image, accept:"image/*", class: "form-control" %>
 </div>

 <div class="form-group">
    <%= f.label :商品名 %>
    <%= f.text_field :name, class: "form-control" %>
 </div>

  <div class="form-group ">
  <%= f.label :商品説明 %><br>
  <%= f.text_area :initroduction, class: "form-control"  %>
  </div>

 <div class="form-group">
    <%= f.label :ジャンル %>
    <%= f.text_field :, class: "form-control" %>
 </div>
 
 <div class="form-group">
    <%= f.label :税抜価格 %>
    <%= f.text_field :price, class: "form-control" %>
 </div>
 
 販売ステータス
 
  <div class="actions">
  <%= f.submit '新規登録', class:"btn btn-success" %>
  </div>

<% end %>
   
</div>
</div>
</div>
   

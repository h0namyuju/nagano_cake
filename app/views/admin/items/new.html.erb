 <h3 class="d-inline-flex bg-light">商品新規登録</h3>

   <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>

 <div class="form-group mt-5">
    <%= f.label :item_image,"商品画像" %>
    <%= f.file_field :image, accept:"image/*", class: "form-control,size: 70" %>
 </span>

 <div class="form-group">
    <%= f.label :name, "商品名" %>
    <%= f.text_field :name, class: "form-control,size: 70" %>
 </div>


  <div class="form-group ">
  <%= f.label :introduction, "商品説明" %><br>
  <%= f.text_area :introduction, class: "form-control,size: 70"  %>
  </div>

 <div class="form-group">
    <%= f.label :genre_id,"ジャンル" %>
    <%= f.select :genre_id, Genre.all.map{|t| [t.name, t.id]}, class: "size: 70" %>
 </div>

 <div class="form-group">
    <%= f.label :price,"税抜価格" %>
    <%= f.text_field :price, class: "form-control, size: 70" %>
 </div>

 販売ステータス
  <%= f.radio_button :is_active, true %>
  <%= f.label :is_active, "販売中" %>
  <%= f.radio_button :is_active, false %>
  <%= f.label :is_active, "販売停止中" %>

  <div class="actions mt-5">
  <%= f.submit '新規登録', class:"btn btn-success" %>
  </div>

<% end %>


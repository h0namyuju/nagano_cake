<div class="container">

  <div class="d-inline-flex bg-light">ジャンル一覧・追加</div>

<div class='row'>
  <%= form_with model: @genre, url: admin_genres_path do |f| %>

    <%= f.label :name, "ジャンル名" %>
    <%= f.text_field :name, class: "form-control" %>

    <%= f.submit '新規登録', class:"btn btn-success" %>
  <% end %>
</div>


 <div class="row">
  <table class="table table-hover table-inverse" >
      <thead>
        <tr>
          <th>ジャンル</th>
        </tr>
      </thead>

      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class:"btn btn-sm btn-success" %></td>
        </tr>
        <% end %>
      </tbody>
  </table>
 </div>
</div>
</div>
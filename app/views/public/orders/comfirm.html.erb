注文情報確認
<div class="row">
<table class="table table-bordered mt-5 col-8">
    <thead>
       <tr>
         <th>商品名</th>
         <th>単価(税込)</th>
         <th>数量</th>
         <th>小計</th>
       <tr>
    </thead>

    <tbody>
      <% total = 0 %>
     <% @cart_item.each do |cart_item| %>
      <tr>
        <td><%= image_tag cart_item.item.get_image(50,50) %><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td>
            <%= cart_item.amount %>
        </td>
        <td>
          <%= cart_item.subtotal %>
          <% total += cart_item.subtotal %>
        </td>
      </tr>
     <% end %>
    </tbody>
</table>


 <table class="table table-bordered col-4">
  <tr>
   <th>送料</th>
   <td>800</td>
   </tr>

   <tr>
   <th>商品合計</th>
   <td><%= total %></td>
   </tr>
   <tr>
   <th>請求合計</th>
   <td><%= total + 800 %></td>
   </tr>
 </table>
<div>

<table>
<tr>
<th>支払方法</th>
<td><%= @order.payment_type_i18n %></td>
</tr>

<tr>
<th>お届け先</th>
<td><%= @order.address %><br>
    <%= @order.name %>
</td>
</tr>
</table>
<%= form_with model: @order, url: public_orders_path do |f| %>
<%= f.hidden_field :name %>
<%= f.hidden_field :address %>
<%= f.hidden_field :postal_code %>
<%= f.hidden_field :total_amount %>
<%= f.hidden_field :order_status %>
<%= f.hidden_field :payment_type %>

<%= f.submit '注文を確定する', class: "btn btn-success" %>
<% end %>
注文履歴詳細
  <div class="row">
  <h5>注文情報</h5><br>
<table class="table table-bordered col-8">
  <tr>
    <th>注文日</th>
    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td><%= @order.postal_code %>
        <%= @order.address %>
        <%= @order.customer.full_name %>
    </td>
  </tr>
  <tr>
    <th>支払方法</th>
    <td><%= @order.payment_type_i18n %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <td><%= @order.order_status %></td>
  </tr>
  </table>

 <table class="table table-bordered　col-4">
  <tr>
    <th>商品合計</th>
    <td><%= @order.total_amount - @order.shipping_fee %></td>
  </tr>
  <tr>
    <th>配送料</th>
    <td><%= %></td>
  </tr>
  <tr>
    <th>ご請求額</th>
    <td><%= @order.total_amount.to_s(:delimited)%></td>
  </tr>
  </table>
  </div>

  <div class="row">
    <h5>注文内容<h5></br>
    <table class="table-bordered col-10">
      <tr>
       <th>商品</th>
       <th>単価（税込）</th>
       <th>個数</th>
       <th>小計</th>
      </tr>
      <tr>
  <% @order.order_details.each do |order_detail|%>
      <td><%= order_detail.item.name%></td>
      <td><%= order_detail.item.with_tax_price %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.price %></td>
  <% end %>
    </table>
  </div>








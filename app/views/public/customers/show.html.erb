<div class="d-inline-flex bg-light">マイページ</div><br>
 登録情報
 <%= link_to '編集する', edit_public_customer_path(@customer), class: 'btn btn-success' %>


 <div class="row">
  <table class="table table-bordered dark">
    <tr>
      <th class="table-secondary">氏名</th>
      <td><%= @customer.first_name %>    <%= @customer.last_name %></td>
    </tr>

    <tr>
      <th class="table-secondary">カナ</th>
      <td><%= @customer.first_name_kana %>    <%= @customer.last_name_kana %></td>
    </tr>

    <tr>
      <th class="table-secondary">郵便番号</th>
      <td><%= @customer.postal_code %></td>
    </tr>

    <tr>
      <th class="table-secondary">住所</th>
      <td><%= @customer.address %></td>
    </tr>

    <tr>
      <th class="table-secondary">電話番号</th>
      <td><%= @customer.telephone_number%></td>
    </tr>

    <tr>
      <th class="table-secondary">メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>

    </table>
   </div>

   <table>
     <tr>
     <th>配送先</th>
     <td><%= link_to '一覧を見る', public_addresses_path, class: 'btn btn-primary' %></td>
    </tr>

    <tr>
    <th>注文履歴</th>
    <td><%= link_to '一覧を見る', public_orders_path(@customer), class: 'btn btn-primary' %></td>
    </tr>
    </table>
<div class="d-inline-flex bg-light">新規会員登録</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>



<div class="form-group md-16">
     <%= f.label :first_name, "名前" %>
     <%= f.text_field :first_name %>
     <%= f.text_field :last_name %>
</div>

<div class="form-group md-16">
 　 　<%= f.label :first_name, "フリガナ" %>
     <%= f.text_field :first_name_kana %>
     <%= f.text_field :last_name_kana%>
</div>

<div class="form-group md-16">
     <%= f.label :email, "メールアドレス" %>
     <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
</div>

<div class="form-group md-16">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    <%= f.email_field :postal_code %>
</div>

<div class="form-group md-16">
     <%= f.label :address, "住所" %>
     <%= f.email_field :address %>
</div>

<div class="form-group md-16">
     <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
     <%= f.email_field :telephone_number %>
</div>

<div class="form-group md-16">
     <%= f.label :password, "パスワード(6文字以上)" %>
     <% if @minimum_password_length %>

   <!-- <em>(<%#= @minimum_password_length %> characters minimum)</em>
   -->
    <%= f.password_field :password, autocomplete: "new-password" %>
</div>

<div class="form-group md-16">
    <%= f.label :password_confirmation, "パスワード確認用" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
</div>

<div class="form-group md-16">
  <div class="col-5"></div>
    <%= f.submit "新規登録", class: "btn btn-success" %>
</div>
<% end %>
<% end %>

<div class="d-inline-flex bg-light">すでに登録済みの方</div>
<%= link_to 'こちら',new_customer_session_path %> からログインしてください。

<%#= render "public/shared/links" %>

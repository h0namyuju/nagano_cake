<div class="d-inline-flex bg-light">新規会員登録</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>



   <div class="field">
     <%= f.label :first_name, "名前" %>
     <%= f.text_field :first_name, class: "mr-10" %><%= f.text_field :last_name %>
   </div>

   <div class="field">
     <%= f.label :first_name, "フリガナ" %>
     <%= f.text_field :first_name_kana, class: "mr-10 mr-10" %><%= f.text_field :last_name_kana%>
   </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

   <div class="field">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %><br />
    <%= f.email_field :postal_code %>
  </div>

   <div class="field">
    <%= f.label :address, "住所" %><br />
    <%= f.email_field :address %>
  </div>

 <div class="field">
    <%= f.label :telephone_number, "電話番号(ハイフンなし)" %><br />
    <%= f.email_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード(6文字以上)" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "確認用" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
s
  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-sucssess" %>
  </div>
<% end %>


<div class="d-inline-flex bg-light">すでに登録済みの方</div>
<%= link_to 'こちら',new_customer_session_path %> からログインしてください。

